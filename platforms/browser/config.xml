<?xml version='1.0' encoding='utf-8'?>
<widget id="io.ticketcoin.tkverifier" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>tkverifier</name>
    <description>
        Ticket Coin Verifier.
    </description>
    <author email="ticketcoin@ticketcoin.io" href="http://ticketcoin.io">
        TicketCoin.io
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="logo.png" />
    <preference name="DisallowOverscroll" value="true" />
</widget>
